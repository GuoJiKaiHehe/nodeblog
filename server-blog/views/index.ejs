
   	<%- include("./common/header.ejs")%>
   	
    	<div class="main">
    		<div class="left-main">
				<ul class="blog-list">
					<%blogs.forEach((blog)=>{%>
						<li class="blog-list-item" blog-id="<%-blog._id%>">
							<a href="/blog/<%-blog._id%>">
								<div class="avatar">
									<img src="" alt="">
								</div>
								<div class="title">
									<%-blog.title%>
								</div>
								<div class="time">
									<%-timeagoInstance.format(blog.created_at,"zh_CN");%>
								</div>						
							</a>
						</li>				
					<%})%>
						
					</ul>    			
    		</div>
    		<%- include('./common/side-bar.ejs')%>
    	</div>
   	<%- include("./common/footer.ejs")%>


